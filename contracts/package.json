{
  "name": "atomic-swap-contracts",
  "version": "1.0.0",
  "description": "Smart contracts for atomic swaps",
  "scripts": {
    "compile": "npx hardhat compile",
    "deploy:fuji": "npx hardhat run scripts/deploy.js --network fuji",
    "deploy:sepolia": "npx hardhat run scripts/deploy.js --network sepolia",
    "deploy:avalanche": "npx hardhat run scripts/deploy.js --network avalanche",
    "deploy:ethereum": "npx hardhat run scripts/deploy.js --network ethereum",
    "test": "npx hardhat test",
    "verify:fuji": "npx hardhat verify --network fuji",
    "verify:sepolia": "npx hardhat verify --network sepolia"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-waffle": "^2.0.6",
    "chai": "^4.3.10",
    "ethereum-waffle": "^4.0.10",
    "ethers": "^5.7.2",
    "hardhat": "^2.19.4"
  }
}